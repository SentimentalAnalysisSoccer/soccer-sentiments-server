{
  "template": "twitter",
  "order":    1,
  "settings": {
    "number_of_shards": 1
  },
  "mappings": {
    "tweet": {
      "_all": {
        "enabled": false
      },
      "properties": {
        "text": {
          "type": "string"
        },
          "coordinates": {
          "properties": {
             "coordinates": {
                "type": "geo_point"
             },
             "type": {
                "type": "string"
             }
          }
       },
         "retweeted_status": {
            "properties": {
              "enabled" : false,
              "store":false,
              "include_in_all":false,
              "index": "no"
          }
      }
      }
    }
  }
}